{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Reposit√≥rio de estudos do [curso.dev](https://curso.dev/)",
  "main": "index.js",
  "scripts": {
    "test": "npm run services:up && node infra/scripts/wait-for-postgres.js && concurrently -n next,jest --hide next -k ---success command-jest 'next dev' 'jest --runInBand'",
    "test:watch": "jest --runInBand --watchAll",
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres",
    "loading": "node infra/scripts/loading.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.10.0",
    "husky": "9.1.7",
    "next": "15.1.4",
    "node-pg-migrate": "7.9.0",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4",
    "jest": "29.7.0",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
