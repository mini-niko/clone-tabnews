{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Reposit√≥rio de estudos do [curso.dev](https://curso.dev/)",
  "main": "index.js",
  "scripts": {
    "test": "npm run services:up && concurrently -n next,jest --hide next -k ---success command-jest 'next dev' 'jest --runInBand'",
    "test:watch": "jest --runInBand --watchAll --verbose",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "posttest": "npm run services:stop",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "loading": "node infra/scripts/loading.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.10.0",
    "husky": "9.1.7",
    "next": "15.1.4",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "7.9.0",
    "pg": "8.13.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4",
    "jest": "29.7.0",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
